---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/layout/Navbar.astro';
---

<Layout title="Clientes - Facturador Digital">
  <Navbar currentPath="/clientes" />
  
  <main class="container">
    <div class="page-header">
      <div>
        <h1>Clientes</h1>
        <p>Gestiona tus clientes y visualiza sus facturas</p>
      </div>
      <button class="btn btn-primary" id="add-customer-btn">
        <span>‚ûï</span>
        Nuevo Cliente
      </button>
    </div>

    <div class="search-bar">
      <input 
        type="text" 
        id="search-input" 
        class="form-input" 
        placeholder="Buscar clientes por nombre, RIF o email..."
      />
    </div>

    <div id="customers-container" class="customers-grid">
      <!-- Customers will be loaded here -->
    </div>

    <div id="empty-state" class="empty-state" style="display: none;">
      <p>üòä No hay clientes a√∫n. ¬°Agrega tu primer cliente!</p>
    </div>
  </main>

  <!-- Modal for Add/Edit Customer -->
  <div id="customer-modal" class="modal-overlay" style="display: none;">
    <div class="modal">
      <div class="modal-header">
        <h2 id="modal-title">Nuevo Cliente</h2>
        <button class="btn-close" id="close-modal">‚úï</button>
      </div>
      <div class="modal-body">
        <form id="customer-form">
          <div class="form-group">
            <label class="form-label">Nombre *</label>
            <input type="text" id="customer-name" class="form-input" required />
          </div>

          <div class="form-group">
            <label class="form-label">RIF / C√©dula *</label>
            <input type="text" id="customer-rif" class="form-input" required placeholder="J-12345678-9" />
          </div>

          <div class="grid grid-2">
            <div class="form-group">
              <label class="form-label">Email *</label>
              <input type="email" id="customer-email" class="form-input" required />
            </div>

            <div class="form-group">
              <label class="form-label">Tel√©fono *</label>
              <input type="tel" id="customer-phone" class="form-input" required placeholder="+58 412-0000000" />
            </div>
          </div>

          <div class="form-group">
            <label class="form-label">Direcci√≥n *</label>
            <textarea id="customer-address" class="form-textarea" required></textarea>
          </div>

          <input type="hidden" id="customer-id" />
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" id="cancel-btn">Cancelar</button>
        <button type="submit" form="customer-form" class="btn btn-primary">Guardar Cliente</button>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { storage, type Customer } from '../../scripts/storage';

  let editingCustomerId: string | null = null;

  function renderCustomers(searchTerm = '') {
    const container = document.getElementById('customers-container')!;
    const emptyState = document.getElementById('empty-state')!;
    let customers = storage.getCustomers();

    // Filter customers
    if (searchTerm) {
      const term = searchTerm.toLowerCase();
      customers = customers.filter(c => 
        c.name.toLowerCase().includes(term) ||
        c.rif.toLowerCase().includes(term) ||
        c.email.toLowerCase().includes(term)
      );
    }

    if (customers.length === 0) {
      container.innerHTML = '';
      emptyState.style.display = 'block';
      return;
    }

    emptyState.style.display = 'none';
    container.innerHTML = customers.map(customer => {
      const invoices = storage.getInvoicesByCustomer(customer.id);
      const totalInvoices = invoices.length;
      const totalAmount = invoices.reduce((sum, inv) => sum + inv.total, 0);

      return `
        <div class="customer-card fade-in">
          <div class="customer-header">
            <div class="customer-avatar">${customer.name.charAt(0).toUpperCase()}</div>
            <div class="customer-info">
              <h3>${customer.name}</h3>
              <p>${customer.rif}</p>
            </div>
          </div>
          <div class="customer-details">
            <div class="detail-item">
              <span>üìß</span>
              <span>${customer.email}</span>
            </div>
            <div class="detail-item">
              <span>üì±</span>
              <span>${customer.phone}</span>
            </div>
            <div class="detail-item">
              <span>üìç</span>
              <span>${customer.address}</span>
            </div>
          </div>
          <div class="customer-stats">
            <div class="stat">
              <strong>${totalInvoices}</strong>
              <span>Facturas</span>
            </div>
            <div class="stat">
              <strong>$${totalAmount.toFixed(2)}</strong>
              <span>Total</span>
            </div>
          </div>
          <div class="customer-actions">
            <a href="/clientes/${customer.id}" class="btn btn-outline">Ver Facturas</a>
            <button class="btn btn-secondary edit-customer" data-id="${customer.id}">Editar</button>
            <button class="btn btn-danger delete-customer" data-id="${customer.id}">Eliminar</button>
          </div>
        </div>
      `;
    }).join('');

    // Attach event listeners
    document.querySelectorAll('.edit-customer').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = (e.target as HTMLElement).dataset.id!;
        editCustomer(id);
      });
    });

    document.querySelectorAll('.delete-customer').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = (e.target as HTMLElement).dataset.id!;
        deleteCustomer(id);
      });
    });
  }

  function showModal(customer?: Customer) {
    const modal = document.getElementById('customer-modal')!;
    const modalTitle = document.getElementById('modal-title')!;
    const form = document.getElementById('customer-form') as HTMLFormElement;

    if (customer) {
      modalTitle.textContent = 'Editar Cliente';
      (document.getElementById('customer-id') as HTMLInputElement).value = customer.id;
      (document.getElementById('customer-name') as HTMLInputElement).value = customer.name;
      (document.getElementById('customer-rif') as HTMLInputElement).value = customer.rif;
      (document.getElementById('customer-email') as HTMLInputElement).value = customer.email;
      (document.getElementById('customer-phone') as HTMLInputElement).value = customer.phone;
      (document.getElementById('customer-address') as HTMLTextAreaElement).value = customer.address;
      editingCustomerId = customer.id;
    } else {
      modalTitle.textContent = 'Nuevo Cliente';
      form.reset();
      editingCustomerId = null;
    }

    modal.style.display = 'flex';
  }

  function hideModal() {
    document.getElementById('customer-modal')!.style.display = 'none';
  }

  function editCustomer(id: string) {
    const customer = storage.getCustomer(id);
    if (customer) {
      showModal(customer);
    }
  }

  function deleteCustomer(id: string) {
    const customer = storage.getCustomer(id);
    if (customer && confirm(`¬øEst√°s seguro de eliminar a ${customer.name}?`)) {
      storage.deleteCustomer(id);
      renderCustomers();
    }
  }

  // Event listeners
  document.getElementById('add-customer-btn')!.addEventListener('click', () => {
    showModal();
  });

  document.getElementById('close-modal')!.addEventListener('click', hideModal);
  document.getElementById('cancel-btn')!.addEventListener('click', hideModal);

  document.getElementById('customer-form')!.addEventListener('submit', (e) => {
    e.preventDefault();

    const customerData = {
      name: (document.getElementById('customer-name') as HTMLInputElement).value,
      rif: (document.getElementById('customer-rif') as HTMLInputElement).value,
      email: (document.getElementById('customer-email') as HTMLInputElement).value,
      phone: (document.getElementById('customer-phone') as HTMLInputElement).value,
      address: (document.getElementById('customer-address') as HTMLTextAreaElement).value,
    };

    if (editingCustomerId) {
      storage.updateCustomer(editingCustomerId, customerData);
    } else {
      storage.saveCustomer(customerData);
    }

    hideModal();
    renderCustomers();
  });

  document.getElementById('search-input')!.addEventListener('input', (e) => {
    const searchTerm = (e.target as HTMLInputElement).value;
    renderCustomers(searchTerm);
  });

  // Close modal on overlay click
  document.getElementById('customer-modal')!.addEventListener('click', (e) => {
    if (e.target === e.currentTarget) {
      hideModal();
    }
  });

  // Initial render
  renderCustomers();
</script>

<style>
  main {
    padding: var(--space-2xl) var(--space-lg);
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-2xl);
  }

  .page-header h1 {
    margin-bottom: var(--space-sm);
  }

  .page-header p {
    color: var(--text-muted);
  }

  .search-bar {
    margin-bottom: var(--space-xl);
  }

  .customers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--space-lg);
  }

  .customer-card {
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    box-shadow: var(--shadow-md);
    transition: var(--transition);
  }

  .customer-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
  }

  .customer-header {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid var(--border-light);
  }

  .customer-avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary), var(--primary-light));
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 600;
  }

  .customer-info h3 {
    margin-bottom: var(--space-xs);
  }

  .customer-info p {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .customer-details {
    margin-bottom: var(--space-lg);
  }

  .detail-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-sm);
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .customer-stats {
    display: flex;
    gap: var(--space-xl);
    padding: var(--space-lg);
    background: var(--bg-secondary);
    border-radius: var(--radius-md);
    margin-bottom: var(--space-lg);
  }

  .stat {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .stat strong {
    font-size: 1.25rem;
    color: var(--primary);
  }

  .stat span {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .customer-actions {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .customer-actions .btn {
    flex: 1;
    min-width: fit-content;
    justify-content: center;
  }

  .btn-close {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: var(--text-muted);
    padding: 0;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-sm);
    transition: var(--transition);
  }

  .btn-close:hover {
    background: var(--bg-secondary);
    color: var(--text-primary);
  }

  .empty-state {
    text-align: center;
    padding: var(--space-2xl);
    color: var(--text-muted);
    font-size: 1.25rem;
  }

  @media (max-width: 768px) {
    .page-header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-md);
    }

    .customers-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
