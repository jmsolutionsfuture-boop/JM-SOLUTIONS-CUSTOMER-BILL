---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/layout/Navbar.astro';
---

<Layout title="Detalle Cliente - Facturador Digital">
  <Navbar currentPath="/clientes" />
  
  <main class="max-w-[1280px] mx-auto px-6 py-12">
    <div class="mb-8">
      <a href="/clientes" class="text-primary font-medium hover:underline flex items-center gap-2">
        <span>←</span> Volver a Clientes
      </a>
    </div>

    <div id="customer-detail">
      <!-- Loaded via client script -->
    </div>

    <div class="mt-16">
      <div class="flex justify-between items-center mb-8 pb-4 border-b border-gray-100">
        <h2 class="text-2xl font-bold text-slate-900">Facturas del Cliente</h2>
        <a id="new-invoice-link" href="#" class="btn btn-primary shadow-md">
          <span>➕</span>
          Nueva Factura
        </a>
      </div>

      <div id="customer-invoices"></div>
      <div id="no-invoices" class="hidden text-center p-12 text-slate-500 italic bg-gray-50 rounded-lg border border-dashed border-gray-300">
        <p>Este cliente no tiene facturas aún.</p>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { storage } from '../../scripts/storage';

  const urlParams = new URLSearchParams(window.location.search);
  const customerId = urlParams.get('id');

  if (!customerId) {
    window.location.href = '/clientes';
  } else {
    // Update links
    const newInvoiceLink = document.getElementById('new-invoice-link') as HTMLAnchorElement;
    if (newInvoiceLink) newInvoiceLink.href = `/facturas/nueva?customerId=${customerId}`;
    
    loadCustomerDetail(customerId);
    loadCustomerInvoices(customerId);
  }

  function loadCustomerDetail(id: string) {
    const customer = storage.getCustomer(id);
    const detailContainer = document.getElementById('customer-detail');

    if (!customer || !detailContainer) {
       if (detailContainer) detailContainer.innerHTML = '<p>Cliente no encontrado</p>';
       return;
    }

    const invoices = storage.getInvoicesByCustomer(id);
    const totalInvoices = invoices.length;
    const totalAmount = invoices.reduce((sum, inv) => sum + inv.total, 0);
    const paidAmount = invoices.filter(inv => inv.status === 'paid').reduce((sum, inv) => sum + inv.total, 0);
    const pendingAmount = totalAmount - paidAmount;

    detailContainer.innerHTML = `
      <div class="card !p-0 overflow-hidden">
        <div class="px-8 py-10 bg-gradient-to-br from-slate-900 to-slate-800 text-white flex flex-col md:flex-row items-center gap-8">
          <div class="w-24 h-24 rounded-full bg-gradient-to-br from-primary to-accent text-white flex items-center justify-center text-4xl font-bold shadow-xl shrink-0 border-4 border-white/20">
            ${customer.name.charAt(0).toUpperCase()}
          </div>
          <div>
            <h1 class="text-4xl font-bold mb-2">${customer.name}</h1>
            <p class="text-slate-400 font-medium tracking-wider uppercase text-sm">${customer.rif}</p>
          </div>
        </div>
        <div class="p-8">
          <!-- ... simplified stats ... -->
           <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
            <div class="bg-indigo-50/50 p-6 rounded-2xl border border-indigo-100 text-center">
              <strong class="block text-3xl font-bold text-indigo-700 mb-1">${totalInvoices}</strong>
              <span class="text-[10px] uppercase tracking-widest font-bold text-slate-500">Facturas</span>
            </div>
             <div class="bg-emerald-50/50 p-6 rounded-2xl border border-emerald-100 text-center">
              <strong class="block text-3xl font-bold text-emerald-700 mb-1">$${totalAmount.toFixed(2)}</strong>
              <span class="text-[10px] uppercase tracking-widest font-bold text-slate-500">Total</span>
            </div>
             <div class="bg-blue-50/50 p-6 rounded-2xl border border-blue-100 text-center">
              <strong class="block text-3xl font-bold text-blue-700 mb-1">$${paidAmount.toFixed(2)}</strong>
              <span class="text-[10px] uppercase tracking-widest font-bold text-slate-500">Pagado</span>
            </div>
             <div class="bg-amber-50/50 p-6 rounded-2xl border border-amber-100 text-center">
              <strong class="block text-3xl font-bold text-amber-700 mb-1">$${pendingAmount.toFixed(2)}</strong>
              <span class="text-[10px] uppercase tracking-widest font-bold text-slate-500">Pendiente</span>
            </div>
          </div>
        </div>
      </div>
    `;
  }

  function loadCustomerInvoices(id: string) {
    const invoices = storage.getInvoicesByCustomer(id);
    const container = document.getElementById('customer-invoices');
    if (!container) return;

    if (invoices.length === 0) {
      document.getElementById('no-invoices')?.classList.remove('hidden');
      return;
    }

    container.innerHTML = `
      <div class="overflow-x-auto bg-white border border-gray-200 rounded-xl shadow-md">
        <table class="w-full border-collapse">
          <tbody class="divide-y divide-gray-100">
            ${invoices.map(invoice => `
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="p-4 text-sm font-bold text-slate-900">${invoice.invoiceNumber}</td>
                <td class="p-4 text-sm text-slate-600">${new Date(invoice.date).toLocaleDateString('es-VE')}</td>
                <td class="p-4 text-sm font-bold text-slate-900">$${invoice.total.toFixed(2)}</td>
                <td class="p-4 text-sm">
                   <a href="/facturas/ver?id=${invoice.id}" class="btn btn-sm btn-outline">Ver Detalle</a>
                </td>
              </tr>
            `).join('')}
          </tbody>
        </table>
      </div>
    `;
  }
</script>
